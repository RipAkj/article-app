<% if @article.errors.any? %>
<% @article.errors.full_messages.each do |msg| %>
  <h2>Errors :</h2>
  <%= msg %>
<% end %>
<% end %>
<%= form_with scope: :article, url: articles_path, local: true do |f| %>
    <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    </p>
    <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
    </p>
    <p>
    <%= f.submit %>
    </p>
<% end %>
